{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}Utilisateur | Edit{% endblock %}
{% block fos_user_content %}
{% block body -%}
<div class="page-header"><h1> Modification d'un utilisateur</h1></div>



{{ form_start(edit_form) }}
<div class="row">
    <span class="alert-danger ">{{ form_errors(edit_form) }}</span>
</div>

<div class="row">

    <div class="span6 offset3">

        <fieldset>
            <legend>Formulaire de modification</legend>

            <div class="row-fluid">
                <div class="span3">{{ form_label(edit_form.nom," Nom ") }}</div>
{{ form_widget(edit_form.nom) }}<span class="alert-danger ">{{ form_errors(edit_form.nom) }}</span>
            </div>
            <div class="row-fluid">
                <div class="span3">{{ form_label(edit_form.prenom," Prénom ") }}</div>
{{ form_widget(edit_form.prenom) }}<span class="alert-danger ">{{ form_errors(edit_form.prenom) }}</span>
            </div>
            <div class="row-fluid">
                <div class="span3">{{ form_label(edit_form.username," Nom d'utilisateur ") }}</div>
{{ form_widget(edit_form.username) }}<span class="alert-danger ">{{ form_errors(edit_form.username) }}</span>
            </div>
            <div class="row-fluid">
                <div class="span3">{{ form_label(edit_form.email," Email ") }}</div>
{{ form_widget(edit_form.email) }}<span class="alert-danger ">{{ form_errors(edit_form.email) }}</span>
            </div>
            <div class="row-fluid">
                <div class="span3">{{ form_label(edit_form.matricule," Matricule ") }}</div>
{{ form_widget(edit_form.matricule) }}<span class="alert-danger ">{{ form_errors(edit_form.matricule) }}</span>
            </div>
            <div class="row-fluid">
                <div class="span3">{{ form_label(edit_form.cin," CIN ") }}</div>
{{ form_widget(edit_form.cin) }}<span class="alert-danger ">{{ form_errors(edit_form.cin) }}</span>
            </div>
            <div class="row-fluid">
                <div class="span3">{{ form_label(edit_form.tel," Téléphone ") }}</div>
{{ form_widget(edit_form.tel) }}<span class="alert-danger ">{{ form_errors(edit_form.tel) }}</span>
            </div>
            <div class="row-fluid">
                <div class="span3">{{ form_label(edit_form.adresse," Adresse ") }}</div>
{{ form_widget(edit_form.adresse) }}<span class="alert-danger ">{{ form_errors(edit_form.adresse) }}</span>
            </div>
            <div class="row-fluid">
                <div class="span3">{{ form_label(edit_form.depot," Depôt ") }}</div>
                <span class="">{{ form_widget(edit_form.depot) }}</span><span class="alert-danger ">{{ form_errors(edit_form.depot) }}</span>
            </div>
            <div class="row-fluid">
                <div class="span3">{{ form_label(edit_form.roles," Role ") }}</div>
                <span class="">{{ form_widget(edit_form.roles) }}</span><span class="alert-danger ">{{ form_errors(edit_form.roles) }}</span>
            </div>
            <div class="row-fluid">
                <div class="span3">{{ form_label(edit_form.expired," Expiré ") }}</div>
{{ form_widget(edit_form.expired) }}<span class="alert-danger ">{{ form_errors(edit_form.expired) }}</span>
            </div>
            <div class="row-fluid">
                <div class="span3">{{ form_label(edit_form.locked," Verouillé ") }}</div>
{{ form_widget(edit_form.locked) }}<span class="alert-danger ">{{ form_errors(edit_form.locked) }}</span>
            </div>
            <div class="row-fluid">
                <div class="span3">{{ form_label(edit_form.expiresAt," Date d'expiration ") }}</div>
{{ form_widget(edit_form.expiresAt) }}<span class="alert-danger ">{{ form_errors(edit_form.expiresAt) }}</span>
            </div>

        </fieldset>
    {{ form_end(edit_form) }}
         {% if role.affUtilisateur%}
<div class="row-fluid">
    <a  href="{{ path('user') }}" class="pull-right">
        <button class="btn btn-default">Revenir à la liste</button>
    </a>
</div>
{%endif%}
{% endblock %}
{% endblock fos_user_content %}