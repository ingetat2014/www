{{ form_widget(form.typePrestations) }}<span class="alert-danger ">{{ form_errors(form.typePrestations) }}</span>
            </div>
            <br/>
            <div class="row-fluid">
    <div class="span12 center-block">
{{ form_widget(form.submit) }}
    </div>
            </div>

        </fieldset>

    </div>
</div>
{{ form_end(form) }}
