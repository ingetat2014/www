{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}Client|Show{% endblock %}
{% block fos_user_content %}
{% block body -%}
<div class="page-header"><h1> Affichage d'un Client {% set varr = entity.encompte?'En Compte':'Non en compte'%}<span class="badge">{{varr}}</span></h1></div>



{{ form_start(form) }}
<div class="desactiver-champs">
    <div class="row">
        <span class="alert-danger ">{{ form_errors(form) }}</span>
    </div>

    <div class="row">

        <div class="span6 offset3">

            <fieldset>
                <legend></legend>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.id," Code ") }}</div>
{{ form_widget(form.id) }}<span class="alert-danger ">{{ form_errors(form.id) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.nomentreprise," Nom d'entreprise /Physique ") }}</div>
{{ form_widget(form.nomentreprise) }}<span class="alert-danger ">{{ form_errors(form.nomentreprise) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.ville," Ville") }}</div>
{{ form_widget(form.ville) }}<span class="alert-danger ">{{ form_errors(form.ville) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.numcompte," Num. Compte ") }}</div>
{{ form_widget(form.numcompte) }}<span class="alert-danger ">{{ form_errors(form.numcompte) }}</span>
                </div>


                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.tel," Téléphone ") }}</div>
{{ form_widget(form.tel) }}<span class="alert-danger ">{{ form_errors(form.tel) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.adresse," Adresse ") }}</div>
{{ form_widget(form.adresse) }}<span class="alert-danger ">{{ form_errors(form.adresse) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.cin," CIN ") }}</div>
{{ form_widget(form.cin) }}<span class="alert-danger ">{{ form_errors(form.cin) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.email," Email ") }}</div>
{{ form_widget(form.email) }}<span class="alert-danger ">{{ form_errors(form.email) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.fax," Fax ") }}</div>
{{ form_widget(form.fax) }}<span class="alert-danger ">{{ form_errors(form.fax) }}</span>
                </div>




                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.secteurs," Secteurs ") }}</div>
{{ form_widget(form.secteurs) }}<span class="alert-danger ">{{ form_errors(form.secteurs) }}</span>
                </div>

{% if role is defined and role is not null%}
{% if role.crClientCompeFDL and role.crClientNnCompeFDL %}
                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.encompte," Client En Compte ") }}</div>
{{ form_widget(form.encompte) }}<span class="alert-danger ">{{ form_errors(form.encompte) }}</span>
                </div>
{%endif%}
{%endif%}
                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.clientaffret," Client Affrêtement ") }}</div>
{{ form_widget(form.clientaffret) }}<span class="alert-danger ">{{ form_errors(form.clientaffret) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.clientramass," Client Ramassage ") }}</div>
{{ form_widget(form.clientramass) }}<span class="alert-danger ">{{ form_errors(form.clientramass) }}</span>
                </div>


            </fieldset>
        </div>
    </div>
</div>
{{ form_end(form) }}
<br/>
{% if role.affClient%}
<div class="row-fluid">
    <a  href="{{ path('client') }}" class="pull-right">
        <button class="btn btn-default">Revenir à la liste</button>
    </a>
</div>
{% endif %}
{% endblock %}

{% endblock fos_user_content %}