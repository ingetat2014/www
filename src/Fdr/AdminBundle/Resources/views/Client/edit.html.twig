{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}Client|Edit{% endblock %}
{% block fos_user_content %}
{% block body -%}
<div class="page-header"><h1> Modification d'un Client {% set varr = entity.encompte?'En Compte':'Non en compte'%}<span class="badge">{{varr}}</span></h1></div>



{{ form_start(edit_form) }}
<div class="row">
    <span class="alert-danger ">{{ form_errors(edit_form) }}</span>
</div>

<div class="row">

    <div class="span6 offset3">

        <fieldset>
            <legend>Formulaire de modification</legend>

            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.nomentreprise," Nom d'entreprise /Physique ") }}</div>
{{ form_widget(edit_form.nomentreprise) }}<span class="alert-danger ">{{ form_errors(edit_form.nomentreprise) }}</span>
            </div>

            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.ville," Ville ") }}</div>
{{ form_widget(edit_form.ville) }}<span class="alert-danger ">{{ form_errors(edit_form.ville) }}</span>
            </div>

            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.numcompte," Num. Compte ") }}</div>
{{ form_widget(edit_form.numcompte) }}<span class="alert-danger ">{{ form_errors(edit_form.numcompte) }}</span>
            </div>


            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.tel," Téléphone ") }}</div>
{{ form_widget(edit_form.tel) }}<span class="alert-danger ">{{ form_errors(edit_form.tel) }}</span>
            </div>

            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.adresse," Adresse ") }}</div>
{{ form_widget(edit_form.adresse) }}<span class="alert-danger ">{{ form_errors(edit_form.adresse) }}</span>
            </div>

            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.cin," CIN ") }}</div>
{{ form_widget(edit_form.cin) }}<span class="alert-danger ">{{ form_errors(edit_form.cin) }}</span>
            </div>

            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.email," Email ") }}</div>
{{ form_widget(edit_form.email) }}<span class="alert-danger ">{{ form_errors(edit_form.email) }}</span>
            </div>

            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.fax," Fax ") }}</div>
{{ form_widget(edit_form.fax) }}<span class="alert-danger ">{{ form_errors(edit_form.fax) }}</span>
            </div>


            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.secteurs," Secteurs ") }}</div>
{{ form_widget(edit_form.secteurs) }}<span class="alert-danger ">{{ form_errors(edit_form.secteurs) }}</span>
            </div>

{% if role is defined and role is not null%}
{% if role.crClientCompeFDL and role.crClientNnCompeFDL %}
            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.encompte," Client En Compte ") }}</div>
{{ form_widget(edit_form.encompte) }}<span class="alert-danger ">{{ form_errors(edit_form.encompte) }}</span>
            </div>
{%endif%}
{%endif%}

            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.clientaffret," Client Affrêtement ") }}</div>
{{ form_widget(edit_form.clientaffret) }}<span class="alert-danger ">{{ form_errors(edit_form.clientaffret) }}</span>
            </div>

            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.clientramass," Client Ramassage ") }}</div>
{{ form_widget(edit_form.clientramass) }}<span class="alert-danger ">{{ form_errors(edit_form.clientramass) }}</span>
            </div>

            <div class="row-fluid">
    <div class="span12 center-block">
{{ form_widget(edit_form.submit) }}
    </div>
            </div>

        </fieldset>

    </div>
</div>
{{ form_end(edit_form) }}
<br/>

{% if role.affClient%}
<div class="row-fluid">
    <a  href="{{ path('client') }}" class="pull-right">
        <button class="btn btn-default">Revenir à la liste</button>
    </a>
</div>
{% endif %}
{% endblock %}

{% endblock fos_user_content %}