{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}Ville|Show{% endblock %}
{% block fos_user_content %}
{% block body -%}
<div class="page-header"><h1> Affichage d'une ville</h1></div>

{{ form_start(form) }}
<div class="desactiver-champs">
    <div class="row">
        <span class="alert-danger ">{{ form_errors(form) }}</span>
    </div>

    <div class="row">

        <div class="span6 offset3">

            <fieldset>
                <legend></legend>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.id," Code ") }}</div>
{{ form_widget(form.id) }}<span class="alert-danger ">{{ form_errors(form.id) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.libelle," Libelle ") }}</div>
{{ form_widget(form.libelle) }}<span class="alert-danger ">{{ form_errors(form.libelle) }}</span>
                </div>

            </fieldset>

        </div>
    </div>
</div>
{{ form_end(form) }}
<br/>
