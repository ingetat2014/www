{# extends '::base.html.twig' #}
{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}Accueil{% endblock %}
{% block fos_user_content %}
  
<h1 class="page-header">Accueil</h1>
    <div class="row-fluid">
    Bonjour 
    {%if user is not null and user is defined%}
    <strong>
    {{user}}
    </strong> 
       <br/>
    {%else%}
       Anonyme, Veuillez connecter en cliquant  sur  Se Connecter

    {%endif%}
    <br/>
    </div>
    <div class="row-fluid">
        <div class="span8 bordurer breadcrumb">
              {{notes|raw }}
        </div>
        <div class="span4">
            
            <div class="row-fluid pull-right">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d13297.83208609043!2d-7.6550281!3d33.5674553!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xa7c2c3b79c0e5323!2sSi%C3%A8ge+CTM+MESSAGERIE!5e0!3m2!1sfr!2s!4v1435420953450" 
                 width="300" height="200" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
            <div class="row-fluid pull-right">
                <img class="img-rounded" alt="ctm-me" title="ctm-me" width="100" height="73" src="{{ asset('bundles/fdradmin/images/ctm1.png') }}"/>
                <img class="img-rounded" alt="ctm-me" title="ctm-me" width="100" height="73" src="{{ asset('bundles/fdradmin/images/ctm.jpg') }}"/>
                <img class="img-rounded"  alt="ctm-me" title="ctm-me" width="100" height="73" src="{{ asset('bundles/fdradmin/images/ctm2.png') }}"/>
            </div>
        </div>
    </div>
     {% endblock fos_user_content %}
