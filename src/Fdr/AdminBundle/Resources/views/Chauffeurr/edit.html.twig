{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}Chauffeur|Edit{% endblock %}
{% block fos_user_content %}
{% block body -%}
<div class="page-header"><h1> Modification d'un Chauffeur</h1></div>



{{ form_start(edit_form) }}
<div class="row">
    <span class="alert-danger ">{{ form_errors(edit_form) }}</span>
</div>

<div class="row">

    <div class="span6 offset3">

        <fieldset>
            <legend>Formulaire de modification</legend>
            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.nom," Nom ") }}</div>
{{ form_widget(edit_form.nom) }}<span class="alert-danger ">{{ form_errors(edit_form.nom) }}</span>
            </div>

            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.prenom," Prenom ") }}</div>
{{ form_widget(edit_form.prenom) }}<span class="alert-danger ">{{ form_errors(edit_form.prenom) }}</span>
            </div>

            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.tel," Telephone ") }}</div>
{{ form_widget(edit_form.tel) }}<span class="alert-danger ">{{ form_errors(edit_form.tel) }}</span>
            </div>

            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.cin," CIN ") }}</div>
{{ form_widget(edit_form.cin) }}<span class="alert-danger ">{{ form_errors(edit_form.cin) }}</span>
            </div>

            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.matricule," Matricule ") }}</div>
{{ form_widget(edit_form.matricule) }}<span class="alert-danger ">{{ form_errors(edit_form.matricule) }}</span>
            </div>

            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.adresse," Adresse ") }}</div>
{{ form_widget(edit_form.adresse) }}<span class="alert-danger ">{{ form_errors(edit_form.adresse) }}</span>
            </div>

            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.disponibilite," Disponible ") }}</div>
{{ form_widget(edit_form.disponibilite) }}<span class="alert-danger ">{{ form_errors(edit_form.disponibilite) }}</span>
            </div>


            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.dateembauche," Date d'embauche ") }}</div>
{{ form_widget(edit_form.dateembauche) }}<span class="alert-danger ">{{ form_errors(edit_form.dateembauche) }}</span>
            </div>

            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.typeconvention," Type De Convention ") }}</div>
{{ form_widget(edit_form.typeconvention) }}<span class="alert-danger ">{{ form_errors(edit_form.typeconvention) }}</span>
            </div>

            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.etatContrat," Etat de contrat ") }}</div>
{{ form_widget(edit_form.etatContrat) }}<span class="alert-danger ">{{ form_errors(edit_form.etatContrat) }}</span>
            </div>
            <div class="row-fluid">
                <div class="span5">{{ form_label(edit_form.conventionne," Conventionné ") }}</div>
{{ form_widget(edit_form.conventionne) }}<span class="alert-danger ">{{ form_errors(edit_form.conventionne) }}</span>
            </div>
            <div class="row-fluid">
    <div class="span12 center-block">
{{ form_widget(edit_form.submit) }}
    </div>
</div>

        </fieldset>

    </div>
</div>
{{ form_end(edit_form) }}
<br/>
{% if role.affChauffeur%}
<div class="row-fluid">
    <a  href="{{ path('chauffeur') }}" class="pull-right">
        <button class="btn btn-default">Revenir à la liste</button>
    </a>
</div>
{% endif %}
{% endblock %}

{% endblock fos_user_content %}
