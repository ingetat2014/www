{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}Manutentionnaire|Show{% endblock %}
{% block fos_user_content %}
{% block body -%}
<div class="page-header"><h1> Affichage d'un Manutentionnaire</h1></div>



{{ form_start(form) }}
<div class="desactiver-champs">
    <div class="row">
        <span class="alert-danger ">{{ form_errors(form) }}</span>
    </div>

    <div class="row">

        <div class="span6 offset3">

            <fieldset>
                <legend>Formulaire de modification</legend>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.id," Identifiant ") }}</div>
{{ form_widget(form.id) }}<span class="alert-danger ">{{ form_errors(form.id) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.nom," Nom ") }}</div>
{{ form_widget(form.nom) }}<span class="alert-danger ">{{ form_errors(form.nom) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.prenom," Prenom ") }}</div>
{{ form_widget(form.prenom) }}<span class="alert-danger ">{{ form_errors(form.prenom) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.matricule," Matricule ") }}</div>
{{ form_widget(form.matricule) }}<span class="alert-danger ">{{ form_errors(form.matricule) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.disponibilite," Disponible ") }}</div>
{{ form_widget(form.disponibilite) }}<span class="alert-danger ">{{ form_errors(form.disponibilite) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.type," Adresse ") }}</div>
{{ form_widget(form.type) }}<span class="alert-danger ">{{ form_errors(form.type) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.cin," CIN ") }}</div>
{{ form_widget(form.cin) }}<span class="alert-danger ">{{ form_errors(form.cin) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.tel," Telephone ") }}</div>
{{ form_widget(form.tel) }}<span class="alert-danger ">{{ form_errors(form.tel) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.adresse," Adresse ") }}</div>
{{ form_widget(form.adresse) }}<span class="alert-danger ">{{ form_errors(form.adresse) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.etatContrat," Etat Contrat ") }}</div>
{{ form_widget(form.etatContrat) }}<span class="alert-danger ">{{ form_errors(form.etatContrat) }}</span>
                </div>


            </fieldset>

        </div>
    </div>
</div>
{{ form_end(form) }}
<br/>
{% if role.affManutentionnaire%}
<div class="row-fluid">
    <a  href="{{ path('manutentionnaire') }}" class="pull-right">
        <button class="btn btn-default">Revenir Ã  la liste</button>
    </a>
</div>
{%endif%}
{% endblock %}

{% endblock fos_user_content %}