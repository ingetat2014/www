{% extends "FOSUserBundle::layout.html.twig" %}
    {% block title %}Paramétrage|Edit{% endblock %}
{% block fos_user_content %}
{% block body -%}
    <div  class="page-header"> 
        <h1>Paramétrage</h1></div>

    {{ form_start(edit_form) }}
<div class="row-fluid">
    <span class="alert-danger ">{{ form_errors(edit_form) }}</span>
</div>
    <div class="row-fluid">
<div class="span6">
    <div class="row-fluid">
    <div class="span12 {{role.editerPlageHoraireParam?'':'cacher'}}">
    
        <fieldset>
            <legend>Modification des plages horaires</legend>

            <div class="row-fluid">
                <div class="span7">{{ form_label(edit_form.heureDebutDejeuner) }}</div>
{{ form_widget(edit_form.heureDebutDejeuner) }}<span class="alert-danger ">{{ form_errors(edit_form.heureDebutDejeuner) }}</span>
            </div>
            <div class="row-fluid">
                <div class="span7">{{ form_label(edit_form.heureFinDejeuner) }}</div>
{{ form_widget(edit_form.heureFinDejeuner) }}<span class="alert-danger ">{{ form_errors(edit_form.heureFinDejeuner) }}</span>
            </div>
            <div class="row-fluid">
                <div class="span7">{{ form_label(edit_form.heureDebutDiner) }}</div>
{{ form_widget(edit_form.heureDebutDiner) }}<span class="alert-danger ">{{ form_errors(edit_form.heureDebutDiner) }}</span>
            </div>            
            <div class="row-fluid">
                <div class="span7">{{ form_label(edit_form.heureFinDiner) }}</div>
{{ form_widget(edit_form.heureFinDiner) }}<span class="alert-danger ">{{ form_errors(edit_form.heureFinDiner) }}</span>
            </div>
            
            <div class="row-fluid">
                <div class="span7">{{ form_label(edit_form.heureDebutDecoucher) }}</div>
{{ form_widget(edit_form.heureDebutDecoucher) }}<span class="alert-danger ">{{ form_errors(edit_form.heureDebutDecoucher) }}</span>
            </div>            
            <div class="row-fluid">
                <div class="span7">{{ form_label(edit_form.heureFinDecoucher) }}</div>
{{ form_widget(edit_form.heureFinDecoucher) }}<span class="alert-danger ">{{ form_errors(edit_form.heureFinDecoucher) }}</span>
            </div>
        </fieldset>
    </div>
    </div>
    <div class="row-fluid">
    <div class="span12 {{role.editerPercentAssurParam?'':'cacher'}}">
     
        <fieldset>
            <legend>Modification Pourcentage Assurance</legend>

            <div class="row-fluid">
                <div class="span7">{{ form_label(edit_form.pourcentAssurance) }}</div>
{{ form_widget(edit_form.pourcentAssurance) }}<span class="alert-danger ">{{ form_errors(edit_form.pourcentAssurance) }}</span>
            </div>
        </fieldset>
    </div>
    </div>
</div>
    
    <div class="span6 {{role.editerPercentAssurParam or role.editerPlageHoraireParam?'':'cacher'}}">

        <fieldset>
            <legend>Modification paramètres</legend>

            <div class="row-fluid">
                <div class="span7">{{ form_label(edit_form.alerteDiffKm) }}</div>
{{ form_widget(edit_form.alerteDiffKm) }}<span class="alert-danger ">{{ form_errors(edit_form.alerteDiffKm) }}</span>
            </div>
            <div class="row-fluid  {{role.editerPercentAssurParam or role.editerPlageHoraireParam?'':'cacher'}}">
                <div class="span12">{{ form_label(edit_form.notesAccueil) }}</div>
     {{ form_widget(edit_form.notesAccueil) }}<span class="alert-danger ">{{ form_errors(edit_form.notesAccueil) }}</span>
            </div>
        </fieldset>
    </div>
      </div>
    <br/>
<div class="row-fluid {{role.editerPercentAssurParam or role.editerPlageHoraireParam?'':'cacher'}}">  
        <div class="span2 offset5"> {{ form_widget(edit_form.submit) }}</div>
</div>

    {{ form_end(edit_form) }}

{% endblock %}
{% endblock fos_user_content %}