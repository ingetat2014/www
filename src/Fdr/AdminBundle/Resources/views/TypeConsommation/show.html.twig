{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}TypeConsommation|Show{% endblock %}
{% block fos_user_content %}
{% block body -%}
<div class="page-header"><h1> Affichage d'un Type de Consommation</h1></div>


<div class="desactiver-champs">
{{ form_start(form) }}
    <div class="row">
        <span class="alert-danger ">{{ form_errors(form) }}</span>
    </div>

    <div class="row">

        <div class="span6 offset3">

            <fieldset>
                <legend></legend>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.id," Identifiant ") }}</div>
{{ form_widget(form.id) }}<span class="alert-danger ">{{ form_errors(form.id) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.type," Type ") }}</div>
{{ form_widget(form.type) }}<span class="alert-danger ">{{ form_errors(form.type) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.depot," Agence ") }}</div>
{{ form_widget(form.depot) }}<span class="alert-danger ">{{ form_errors(form.depot) }}</span>
                </div>
                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.ville,"Ville ") }}</div>
{{ form_widget(form.ville) }}<span class="alert-danger ">{{ form_errors(form.ville) }}</span>
                </div>
                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.produit," Produit ") }}</div>
{{ form_widget(form.produit) }}<span class="alert-danger ">{{ form_errors(form.produit) }}</span>
                </div>

                <div class="row-fluid">
                    <div class="span5">{{ form_label(form.prixUnitaire," Prix Unitaire ") }}</div>
{{ form_widget(form.prixUnitaire) }}<span class="alert-danger ">{{ form_errors(form.prixUnitaire) }}</span>
                </div>


            </fieldset>

        </div>
    </div>
{{ form_end(form) }}
</div>
<br/>
{% if role.affTypeConsommation%}
<div class="row-fluid">
    <a  href="{{ path('typeconsommation') }}" class="pull-right">
        <button class="btn btn-default">Revenir Ã  la liste</button>
    </a>
</div>
{%endif%}
{% endblock %}

{% endblock fos_user_content %}