{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}Inscription confirmée {% endblock %}
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <p>{# 'registration.confirmed'|trans({'%username%': user.username}) #}
        Le compte <strong>{{app.request.session.get("useradd")}}</strong>
      a bien été créé et activé</p>
    <a href="{{ path('home_user') }}">Rendez-vous à L'accueil</a>
    <br/>
    Ou Consulter ce  dernier compte : <a href="{{ path('user_show', { 'id': app.request.session.get("useradd").id }) }}">Cliquer ici</a>
    {% if app.session is not empty %}
        {% set targetUrl = app.session.get('_security.' ~ app.security.token.providerKey ~ '.target_path') %}
        {% if targetUrl is not empty %}<p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>{% endif %}
    {% endif %}
{% endblock fos_user_content %}
